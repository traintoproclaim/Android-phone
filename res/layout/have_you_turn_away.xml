<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:background="@drawable/background"
   >

    <RelativeLayout
        android:id="@+id/rl_1"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >
          
  <RelativeLayout
             android:id="@+id/rl_2"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_centerInParent="true"
             >
        
                <TextView
                    android:id="@+id/tv_lable"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dip"
                    android:gravity="center"
                    android:text="So have you &apos;Turned&apos; and &apos;Surrendered&apos; your life to Jesus?"
                    android:textColor="#000000"
                    android:textSize="18dip"
                     />
               
              <RelativeLayout 
                  android:id="@+id/rr"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="15dip"
                  android:layout_below="@+id/tv_lable"
                  android:layout_centerHorizontal="true"
                  >
               
               <ImageView
                    android:id="@+id/iv_turn_away"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/turn_away_small"/>
               
               <ImageView
                    android:id="@+id/iv_surrender"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/iv_turn_away"
                    android:background="@drawable/surrender_small"
                    android:layout_marginLeft="20dip"/>
               </RelativeLayout>
              
            <LinearLayout 
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_below="@+id/rr"
             android:layout_centerHorizontal="true"
             >
            <Button 
                 android:id="@+id/btn_yes"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
				 android:background="@drawable/yes_1"
				 android:layout_margin="5dip"
                 />
            
            <Button 
                 android:id="@+id/btn_no"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:background="@drawable/no_1"
                 android:layout_margin="5dip"
                 />
            </LinearLayout>
                    
       </RelativeLayout>
         
       <Button 
            android:id="@+id/btn_bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:background="@drawable/text_icon"
            android:layout_margin="5dip"
            android:visibility="invisible"
             android:onClick="onTextButtonClick"
            />
        <LinearLayout 
            android:id="@+id/ll_bottom"
        	android:layout_width="fill_parent"
        	android:layout_height="wrap_content"
            android:gravity="center"
            android:onClick="onTextClick"
            android:layout_alignParentBottom="true"
             android:background="@drawable/line"
          >
          
          <TextView 
              android:id="@+id/tv_bottom"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="ho"
               android:textColor="#747474"
              android:textSize="18dip"
              android:gravity="center"
              />
          
      </LinearLayout>
    </RelativeLayout>
 </RelativeLayout>

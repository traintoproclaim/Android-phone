<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background" >

    <RelativeLayout
        android:id="@+id/rl_1"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

          <ImageView
                android:id="@+id/iv_heart_big"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:visibility="invisible"
                android:background="@drawable/heart_big"
                android:scaleType="fitCenter" 
               
                />
          
           <FrameLayout
                    android:id="@+id/frame1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    >
                    
                <ImageView
	                    android:id="@+id/iv_perfect_rec"
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:visibility="invisible"
	                    android:layout_gravity="top|center_horizontal"
	                    android:background="@drawable/perfect_record_1"
	                    android:layout_marginBottom="5dip"
	                    android:scaleType="fitCenter" />
                
                <ImageView
	                    android:id="@+id/iv_cross_1"
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:visibility="invisible"
	                    android:layout_gravity="top|center_horizontal"
	                    android:background="@drawable/cross_grey"
	                    android:layout_marginBottom="5dip"
	                    android:scaleType="fitCenter" /> 
	                    
                <ImageView
                        android:id="@+id/iv_jesus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="invisible"
                        android:layout_gravity="top|center_horizontal"
                        android:background="@drawable/jesus_white_icon1"
                        android:scaleType="fitCenter" 
                       
                        /> 
                        
                
                <FrameLayout
                    android:id="@+id/frame"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top|center_horizontal"
                    >

                    <ImageView
                        android:id="@+id/iv_heart"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="invisible"
                        android:background="@drawable/heart"
                        android:scaleType="fitCenter" 
                       
                        />
                    
                    <TextView 
                        android:id="@+id/tv_center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="I Love"
                        android:textSize="18dip"
                        android:gravity="center"
                        android:textColor="#ffffff"
                        android:visibility="invisible"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="45dip"
                        android:maxLength="25"/>
                    
					</FrameLayout>
                
                
                <ImageView
                        android:id="@+id/iv_people_group"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/jesus0" 
                        />
               </FrameLayout>
        <include 
            layout="@layout/bottom_bar"     
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"/>
        

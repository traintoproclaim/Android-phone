<RelativeLayout 
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true"
    android:paddingBottom="25dip"
    >
    
    
     <RelativeLayout
	    android:id="@+id/rl_center_19_top"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_centerHorizontal="true"
	    >
                
				 <ImageView
                      android:id="@+id/iv_forgiven"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:background="@drawable/event_forgiven_circle" />
				 
				  <ImageView
                      android:id="@+id/iv_cross"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_centerInParent="true"
                      android:visibility="invisible"
                      android:background="@drawable/cross8" />

            </RelativeLayout>
            
      
       <RelativeLayout
           android:id="@+id/rl_2"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_centerHorizontal="true"
           android:layout_below="@+id/rl_center_19_top"
           android:layout_marginBottom="1dp" >
			
			<RelativeLayout
                android:id="@+id/rl_center_19"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"  
              
                android:layout_marginTop="5dip" >

                <RelativeLayout
                    android:id="@+id/rl1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="60dip"
                    >

                    <RelativeLayout
                        android:id="@+id/rl_left"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true" >


                        <RelativeLayout
                            android:id="@+id/rl11"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/iv_jesus_text"
                            android:layout_centerInParent="true" >

                            <ImageView
                            android:id="@+id/iv_body"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:background="@drawable/body_soul_gray" />
                            
                            <ImageView
			                    android:id="@+id/iv_perfect"
			                    android:layout_width="wrap_content"
			                    android:layout_height="wrap_content"
			                    android:layout_below="@+id/iv_body"
			                    android:layout_marginTop="5dip"
			                    android:visibility="invisible"
			                    android:layout_centerHorizontal="true"
			                    android:background="@drawable/page_13_perfect"
			                   />
                        </RelativeLayout> 
                    </RelativeLayout>
                </RelativeLayout>
                
                  <ImageView
           			android:id="@+id/iv_heven_arrow"
           			android:layout_width="wrap_content"
           			android:layout_height="wrap_content"
           			android:layout_toRightOf="@+id/rl1"
           			android:layout_marginLeft="10dip"
           	        android:layout_above="@+id/iv_perfect"
           			android:visibility="invisible"
           			android:background="@drawable/heaven_arrow"
           			/>
               
           	
                  <!-- This image view is taken just to arrange the heven arrow inline with body in relative layout -->
                 
                  <ImageView
           			android:id="@+id/iv_hell_arrow"
           			android:layout_width="wrap_content"
           			android:layout_height="wrap_content"
           			android:layout_toRightOf="@+id/rl1"
           			android:visibility="invisible"
           			android:layout_alignBottom="@+id/rl1"
           			android:layout_marginLeft="10dip"
           			android:background="@drawable/hell_arrow_small"
           			/>
           			
           			<ImageView
			                    android:id="@+id/iv_perfect"
			                    android:layout_width="50dip"
			                    android:layout_height="wrap_content"
			                    android:layout_alignBottom="@+id/rl1"
			                    android:layout_marginTop="5dip"
			                    android:visibility="invisible"
			                    android:layout_toRightOf="@+id/rl1"
			                    android:background="@drawable/page_13_perfect"
			                   />
            </RelativeLayout>
            </RelativeLayout>
               
        </RelativeLayout>
    </RelativeLayout>
 </RelativeLayout>

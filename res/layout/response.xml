<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   android:background="@drawable/background">
    
 <RelativeLayout 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        >
        
     <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#1A1A1A"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="5dip"
        android:visibility="gone"
        android:textSize="22dip"/>
     
    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Which statement best describes your response to this presentation?"
        android:textColor="#1A1A1A"
        android:layout_below="@+id/tv_title"
        android:gravity="center"
        android:maxLines="8"
        android:scrollbars="vertical"
        android:layout_marginLeft="8dip"
        android:layout_marginRight="8dip"
        android:layout_marginBottom="5dip"
        android:textSize="@dimen/title_font_size" />
   
   
     <RadioGroup
            android:id="@+id/radioGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView1"
            android:layout_centerHorizontal="true">

            <RadioButton
                android:id="@+id/rb_dnt_belive"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="I don’t believe it"
                android:checked="false"
                android:textSize="@dimen/body_font_size"
                android:textColor="#1A1A1A" />

            <RadioButton
                android:id="@+id/rb_might_thought"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="I might give it some thought"
                  android:textSize="@dimen/body_font_size"
                android:checked="false"
                android:textColor="#1A1A1A" />

            <RadioButton
                android:id="@+id/rb_explore_futher"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                  android:textSize="@dimen/body_font_size"
                android:text="I’d like to explore it further" 
                android:checked="false"
                android:textColor="#1A1A1A"/>
            
             <RadioButton
                android:id="@+id/rb_surrender_now"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                  android:textSize="@dimen/body_font_size"
                android:text="I want to surrender to Jesus right now" 
                android:checked="false"
                android:textColor="#1A1A1A"/>
             
        </RadioGroup>
        
   <Button
     android:id="@+id/btn_ok"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_below="@+id/radioGroup"
     android:layout_centerHorizontal="true"
     android:layout_marginTop="5dip"/>
   
      
     </RelativeLayout>
      <Button
             android:id="@+id/btn_next"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:background="@drawable/next"
             android:layout_alignParentBottom="true"
             android:layout_alignParentRight="true"
             android:layout_marginBottom="30dip"
             android:layout_marginRight="20dip"
             android:visibility="invisible"
             />
 </RelativeLayout>